%h1
  Is it hot or not?

%table
  %tr
    %th
      Temperature
    %th
      Definition
  %tr
    %td
      Hot
    %td
      = @presenter.hot_definition
  %tr
    %td
      Warm
    %td
      = @presenter.warm_definition
  %tr
    %td
      Cold
    %td
      = @presenter.cold_definition

= form_with url: "/weather/search", method: :get do |form|
  = form.label :query, "Search postcode:"
  = form.text_field :query
  = form.submit "Search"
